<!DOCTYPE html>
<%- include('../head'); %>
<body>
<%- include('../navbar', {arg: {activeMeter: 'active'}}); %>
<div class="container-xl">
    <div class="table-responsive">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-6">
                        <h2>Manage <b>Rules</b></h2>
                    </div>
                    <div class="col-sm-6">
                        <a href="#addEmployeeModal" class="btn btn-success" data-toggle="modal"><i
                                    class="material-icons">&#xE147;</i> <span>Add New Rule</span></a>
<!--                        <a href="#deleteEmployeeModal" class="btn btn-danger" data-toggle="modal"><i-->
<!--                                    class="material-icons">&#xE15C;</i> <span>Delete</span></a>-->
                    </div>
                </div>
            </div>
            <table class="table table-striped table-hover show-meter">
                <thead>
                <tr>
                    <th>
                        <span class="custom-checkbox">
                            <input type="checkbox" id="selectAll">
                            <label for="selectAll"></label>
                        </span>
                    </th>
                    <th>Tên</th>
                    <th>Khu vực</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                <% meters.forEach(meter => { %>
                    <tr data-id="<%= meter.id %>">
                        <td>
							<span class="custom-checkbox">
								<input type="checkbox" id="checkbox1" name="options[]" value="1">
								<label for="checkbox1"></label>
							</span>
                        </td>
                        <td><%= meter.name %></td>
                        <td><%= meter.area %></td>
                        <td>
                            <a  class="edit" data-toggle="modal"><i class="material-icons"
                                                                                             data-toggle="tooltip"
                                                                                             title="Edit">&#xe8f4;</i></a>
                            <a href="#deleteEmployeeModal" class="delete" data-toggle="modal"><i class="material-icons"
                                                                                                 data-toggle="tooltip"
                                                                                                 title="Delete">&#xE872;</i></a>
                        </td>
                    </tr>
                <% }) %>
                </tbody>
            </table>
            <div class="clearfix">
                <div class="hint-text">Showing <b><%= meta.size %></b> out of <b><%= meta.count %></b> entries</div>
                <% if (meta.totalPage > 0) { %>
                <ul class="pagination">
                    <% if (meta.page == 1) { %>
                        <li class="page-item disabled"><a href="/configs/meters?page=0&size=5">Previous</a></li>
                    <% } else { %>
                        <li class="page-item disabled"><a href="/configs/meters?page=0&size=5">Previous</a></li>
                    <% } %>
                    <% var i = (Number(meta.page) > 5 ? Number(meta.page) - 4 : 1) %>
                    <% if (i !== 1) { %>
                        <li class="page-item disabled"><a>...</a></li>
                    <% } %>
                    <% for (; i <= (Number(meta.page) + 4) && i <= meta.totalPage; i++) { %>
                        <% if (i == meta.page) { %>
                            <li class="page-item active"><a><%= i %></a></li>
                        <% } else { %>
                            <li class="page-item"><a href="/products/<%= i %>"><%= i %></a></li>
                        <% } %>
                        <% if (i == Number(meta.page) + 4 && i < meta.totalPage) { %>
                            <li class="page-item disabled"><a>...</a></li>
                        <% } %>
                    <% } %>
                    <% if (meta.page == meta.totalPage) { %>
                        <li class="page-item disabled"><a>Last</a></li>
                    <% } else { %>
                        <li class="page-item disabled"><a href="/configs/meters?page=<%= meta.totalPage %>&size=5">Next</a></li>
                    <% } %>
                </ul>
                <% } %>
            </div>
        </div>
    </div>
</div>
<%- include('./modals/addRuleMeter'); %>
<%- include('./modals/showRulesMeter'); %>
<%- include('./modals/deleteMeter'); %>

<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"
        integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy"
        crossorigin="anonymous"></script>
<script type="text/javascript" src="/javascripts/main.js"></script>

</body>